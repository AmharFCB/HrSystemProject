@model IEnumerable<Employees>
@{
    ViewData["Title"] = "Employees";
}

<h1 class="mb-4">Employees</h1>

<div class="text-end mb-3">
    <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th class="fw-semibold">Employee ID</th>
                    <th class="fw-semibold">Name</th>
                    <th class="fw-semibold">National ID</th>
                    <th class="fw-semibold">Phone Number</th>
                    <th class="fw-semibold">Email</th>
                    <th class="fw-semibold">Password</th>
                    <th class="fw-semibold">Address</th>
                    <th class="fw-semibold">Joining Date</th>
                    <th class="fw-semibold">Job</th>
                    <th class="fw-semibold">City</th>
                    <th class="fw-semibold">Status</th>
                    <th class="text-center fw-semibold">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Id</td>
                        <td>@emp.Name</td>
                        <td>@emp.NationalID</td>
                        <td>@emp.PhoneNumber</td>
                        <td>@emp.Email</td>
                        <td>@emp.Password</td>
                        <td>@emp.Address</td>
                        <td>@emp.JoiningDate.ToShortDateString()</td>
                        <td>@emp.jobs?.JobName</td>
                        <td>@emp.city?.CityName</td>
                        <td>@emp.EmployeeStatus?.StatusName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-Uid="@emp.Uid" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-Uid="@emp.Uid" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
