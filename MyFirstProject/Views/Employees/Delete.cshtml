@model Employees
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-user-times me-2"></i> Delete Employee</h5>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this employee?</p>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">National ID</label>
                    <input type="number" asp-for="NationalID" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Phone Number</label>
                    <input type="number" asp-for="PhoneNumber" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" asp-for="Address" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Joining Date</label>
                    <input type="date" asp-for="JoiningDate" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">City</label>
                    <select asp-for="CityId" class="form-select" asp-items="@ViewBag.CityList" disabled>
                        <option value="" disabled>Select City</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="EmployeeStatusId" class="form-label">Status</label>
                    <select asp-for="EmployeeStatusId" disabled class="form-select" asp-items="@ViewBag.empStatusList">
                        <option value="" disabled selected>Select Status</option>
                    </select>
                    <span asp-validation-for="EmployeeStatusId" class="text-danger"></span>
                </div>
            </div>

            <form method="post" asp-action="PostDelete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Uid" />
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
