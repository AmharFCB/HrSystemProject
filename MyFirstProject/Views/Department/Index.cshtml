@model IEnumerable<Department>
@{
    ViewData["Title"] = "Department";
}

<h1 class="mb-4">Department</h1>

<div class="text-end mb-3">
    <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th class="fw-semibold">Department ID</th>
                    <th class="fw-semibold">Department Name</th>
                    <th class="fw-semibold">Department Manager</th>
                    <th class="text-center fw-semibold">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.DepartmentName</td>
                        <td>@dept.employees?.Name</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-Uid="@dept.Uid" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-Uid="@dept.Uid" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
