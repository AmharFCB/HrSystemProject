@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-building me-2"></i> Delete Department</h5>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this department?</p>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="DepartmentName" class="form-label">Department Name</label>
                    <input type="text" asp-for="DepartmentName" class="form-control" disabled>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="EmployeesId" class="form-label">Department Manager</label>
                    <select asp-for="EmployeesId" class="form-select" asp-items="@ViewBag.EmployeesList" disabled>
                        <option value="" disabled selected>Select Manager</option>
                    </select>
                </div>
            </div>

            <form method="post" asp-action="PostDelete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Uid" />
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
