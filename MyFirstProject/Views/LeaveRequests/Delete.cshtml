@model LeaveRequests
@{
    ViewData["Title"] = "Delete Leave Request";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Delete Leave Request</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="PostDelete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Uid" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="EmployeesId" class="form-label">Employee</label>
                        <select asp-for="EmployeesId" class="form-select" asp-items="@ViewBag.EmployeesList" disabled>
                            <option value="" disabled>Select Employee</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="LeaveTypeId" class="form-label">Leave Type</label>
                        <select asp-for="LeaveTypeId" class="form-select" asp-items="@ViewBag.leaveTypeList" disabled>
                            <option value="" disabled>Select Leave Type</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="StartDate" class="form-label">Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" disabled />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="EndDate" class="form-label">End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" disabled />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="LeaveDays" class="form-label">Leave Days</label>
                        <input type="number" asp-for="LeaveDays" class="form-control" disabled />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <input type="text" asp-for="Status" class="form-control" disabled />
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
