@model Jobs
@{
    ViewData["Title"] = "Delete Job";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Delete Job</h5>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this job?</p>

            <div class="mb-3">
                <label class="form-label">Job Name</label>
                <input type="text" asp-for="JobName" class="form-control" disabled>
            </div>

            <div class="mb-3">
                <label class="form-label">Department</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.DepartmentList" disabled>
                    <option value="" disabled>Select Department</option>
                </select>
            </div>

            <form method="post" asp-action="PostDelete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Uid" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
