@model Jobs
@{
    ViewData["Title"] = "Edit Job";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i> Edit Job</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Uid" />
                <div class="mb-3">
                    <label for="JobName" class="form-label">Job Name</label>
                    <input type="text" asp-for="JobName" class="form-control" placeholder="Enter job title">
                    <span asp-validation-for="JobName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.DepartmentList">
                        <option value="" disabled>Select Department</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="fas fa-save"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
