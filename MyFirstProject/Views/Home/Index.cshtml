@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">HR Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Overview</li>
    </ol>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body"> Total Employees</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>120 Employees</span>
                    <div class="small text-white"><i class="fas fa-users"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body"> Attendance Today</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>110</span>
                    <div class="small text-white"><i class="fas fa-check-circle"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body"> Absences</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>10</span>
                    <div class="small text-white"><i class="fas fa-user-times"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body"> Pending Leaves</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>5 Requests</span>
                    <div class="small text-white"><i class="fas fa-calendar-alt"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Attendance & Absences (Weekly)
                </div>
                <div class="card-body">
                    <canvas id="attendanceChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Leave Types
                </div>
                <div class="card-body">
                    <canvas id="leaveChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Latest Leave Requests
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Leave Type</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>امهار العتيبي</td>
                        <td>Annual</td>
                        <td>2023-10-01</td>
                        <td>2023-10-05</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                    </tr>
                    <tr>
                        <td>سلطانه الاسمري</td>
                        <td>Sick</td>
                        <td>2023-09-28</td>
                        <td>2023-09-30</td>
                        <td><span class="badge bg-success">Approved</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
   
    .bg-primary {
        background-color: #0061f2 !important;
    }

    .bg-success {
        background-color: #00ac69 !important;
    }

    .bg-warning {
        background-color: #f4a100 !important;
    }

    .bg-danger {
        background-color: #e81500 !important;
    }


    .card {
        border-radius: 0.35rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58,59,69,.15);
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script>
        var ctx = document.getElementById("attendanceChart");
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["Saturday", "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday"],
                datasets: [{
                    label: "Attendance",
                    lineTension: 0.3,
                    backgroundColor: "rgba(0,97,242,0.2)",
                    borderColor: "#0061f2",
                    pointRadius: 5,
                    pointBackgroundColor: "#0061f2",
                    pointBorderColor: "rgba(255,255,255,0.8)",
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "#0061f2",
                    pointHitRadius: 20,
                    pointBorderWidth: 2,
                    data: [100, 110, 108, 115, 112, 107]
                },
                {
                    label: "Absence",
                    backgroundColor: "rgba(232,21,0,0.2)",
                    borderColor: "#e81500",
                    pointBackgroundColor: "#e81500",
                    data: [5, 8, 7, 6, 9, 4]
                }]
            }
        });

        var ctx2 = document.getElementById("leaveChart");
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ["Annual", "Sick", "Emergency"],
                datasets: [{
                    label: "Requests",
                    backgroundColor: ["#0061f2", "#00ac69", "#f4a100"],
                    data: [10, 5, 3]
                }]
            }
        });
    </script>
}
